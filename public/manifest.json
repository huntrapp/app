{
    "manifest_version": 2,
    "name": "Quarry App",
    "short_name": "Quarry",
    "version": "1.0",
    "description": "Yo dawg, we heard you like content, so we put content with your content so you content while you content.",
    "author": "Jari Zwarts & Jeff Reiner",
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "permissions": [
        "storage"
    ],
    "incognito": "split",
    "content_security_policy": "script-src 'self' http://localhost:3000/; object-src 'self'",
    "icons": [
        {
            "src": "/android-chrome-192x192.png",
            "sizes": "192x192",
            "type": "image/png"
        },
        {
            "src": "/android-chrome-512x512.png",
            "sizes": "512x512",
            "type": "image/png"
        }
    ],
    "theme_color": "#ffffff",
    "background_color": "#ffffff",
    "display": "standalone"
}